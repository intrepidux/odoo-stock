<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-extend="PickingMenuWidget">
        <t t-jquery="div[t-att-data-id='type.id']" t-operation="before">
            <t t-if="type.code == 'internal'">
                <a t-att-href="'/stock/quickmove/?picking_type=' + type.id" class="quickmove-btn label label-primary pull-right">Quick Move</a>
            </t>
        </t>
    </t>
    <t t-name="quickmove_product_lines">
        <t t-foreach="product_ids" t-as="product">
            <tr t-att-data-id="product[0]">
                <td>
                    <p class="text-left quickmove_product_name"><t t-esc="product[1]"/></p>
                </td>
                <td style="width: 150px;">
                    <div class="input-group">
                        <span class="input-group-addon quickmove_minus input-sm" t-att-data-product-id="product[0]" onclick="quickmove_minus($(this));"><a href="#"><i class="fa fa-minus"/></a></span>
                        <input class="form-control text-center quickmove_qty" t-att-name="'product_qty_' + product[0]" type="text" t-att-value="product[2]" onkeypress="if (event.keyCode == 13) {return false;}" />
                        <span class="input-group-addon quickmove_plus input-sm" t-att-data-product-id="product[0]" onclick="quickmove_plus($(this));"><a href="#"><i class="fa fa-plus"/></a></span>
                    </div>
                </td>
                <td style="width: 30px;">
                    <i class="fa fa-trash fa-2x text-primary" onclick="quickmove_remove($(this));"/>
                </td>
            </tr>
        </t>
    </t>
    <t t-name="quickmove_location_src_id">
        <input type="hidden" class="form-control" name="location_src_id" t-attf-value="#{location_src_id or ''}" />
        <input type="text" class="form-control" name="location_src_id" t-attf-value="#{location_src_name or ''}" disabled="disabled" required="1" />
    </t>
    <t t-name="quickmove_location_dest_id">
        <input type="hidden" class="form-control" name="location_dest_id" t-attf-value="#{location_dest_id or ''}" />
        <input type="text" class="form-control" name="location_dest_id" t-attf-value="#{location_dest_name or ''}" disabled="disabled" required="1" />
    </t>
</templates>
