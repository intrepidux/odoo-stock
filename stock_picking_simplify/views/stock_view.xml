<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="vpicktree" model="ir.ui.view">
            <field name="name">stock.picking.form.simplify</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <button name="show_details" position="after">
                    <button name="action_set_qty_done" type="object" icon="fa-check" attrs="{'invisible': ['|', ('state', 'not in', ('assigned', 'partially_available')), ('result_package_id', '!=', False)]}"/>
                </button>
                <button name="put_in_pack" position="before">
                    <button name="action_set_qty_done" type="object" icon="fa-check" class="oe_right" style="margin-left: 20px;" states="assigned,partially_available"/>
                </button>
            </field>
        </record>
        
    </data>
</odoo>
