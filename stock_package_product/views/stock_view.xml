<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="product_package_line_tree" model="ir.ui.view">
            <field name="name">Product Package Line Tree</field>
            <field name="model">product.product.package.line</field>
            <field name="arch" type="xml">
                <tree editable="bottom" string="Products in Package">
                    <field name="qty" />
                    <field name="uom_id" />
                    <field name="product_id" />
                </tree>
            </field>
        </record>
        
        <record id="product_product_package_lines_form" model="ir.ui.view">
            <field name="name">product.product.form.package_products</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view" />
            <field name="arch" type="xml">
                <div name="options" position="inside">
                    <field name="is_package_product" />
                    <label for="is_package_product" />
                </div>
                <group position="after">
                    <div name="package_product" attrs="{'invisible': [('is_package_product', '=', False)]}">
                        <separator string="Package Product Content" />
                        <field name="package_product_ids" />
                    </div>
                </group>
            </field>
        </record>
        
    </data>
</odoo>
