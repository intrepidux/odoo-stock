                </div>
            </td>
            <td>
                <i class="abc-op-maximize-qty fa fa-fast-forward fa-2x"/>
            </td>
            <!-- Todo -->
            <td class="brctbl-col3 text-center">
                <t t-esc="widget.data.qty_remaining"/> / <t t-esc="widget.data.quantity"/> <t t-esc="widget.data.product_uom_id.display_name" />
            </td>
            <!-- From -->
