<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="stock_picking_order_based_wizard_form" model="ir.ui.view">
            <field name="name">Make Picking</field>
            <field name="model">stock.picking.order.based.wizard</field>
            <field name="arch" type="xml">
                <form string="Make Picking">
                    <group>
                        <group>
                            <field name="source_location_id" />
                            <field name="dest_location_id" />
                            <field name="categ_id" />
                        </group>
                        <group>
                            <field name="period_start" />
                            <field name="period_stop" />
                        </group>
                    </group>
                    <footer>
                        <div>
                            <button name="make_picking" string="Make Picking" type="object" class="oe_highlight" />
                            or
                            <button special="cancel" string="Cancel" class="oe_link" />
                        </div>
                    </footer>
                </form>
            </field>
        </record>
        <act_window id="action_stock_picking_order_based" key2="client_action_multi" name="Make Picking" res_model="stock.picking.order.based.wizard" view_mode="form" target="new" view_type="form" />
        <menuitem id="menu_stock_picking_order_based" name="Make Picking" action="stock_picking_order_based.action_stock_picking_order_based" parent="stock.menu_stock_sched" />
    </data>
</odoo>
